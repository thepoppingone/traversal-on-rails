<%= form_for @list, remote: true do |f|   %>
  <%= f.label  :name                      %>
  <%= f.text_field  :name, :autofocus => true, id: "list_name"              %>
  <%= f.label  :description %>
  <%= f.text_field  :description                     %>
  <%= f.hidden_field :user_id, :value => @user.id %>
<%= f.submit "Create", :id => "list_new_submit", :class => "hide" %>
<% end %>
