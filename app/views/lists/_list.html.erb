<li>
  <div class="collapsible-header">
    <i class="material-icons">filter_drama</i>
  <%= list.name%> - <span class="teal-text text-lighten-2"><%= list.description%></span>
  
  <span class="edit right">
    <%= link_to edit_list_path(list), remote: true do %>
        <i class="small material-icons grey-text text-darken-1">edit</i>
    <% end %>

    <%= link_to list, remote: true, method: :delete,
        data: { confirm: 'Are you sure?' } do %>
    <i class="small material-icons grey-text text-darken-1">delete</i>
    <% end %>
  </span>
</div>
  <% @items =  list.items  %>  
  <div class="collapsible-body">
  <% if @items.empty? %>
      <p>List currently has no items</p>
  <% else %>
    <p>
    <% @items.each do |i| %>
      <%= i.name %><br/>
    <% end %> 
    </p>
   <% end %>
  </div>


</li>

