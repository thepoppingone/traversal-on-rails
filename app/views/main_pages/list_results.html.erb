      <%= @displayString %>
      <br/>
      <h3>Minimal temperature</h3>
      <%= @displayString2%>
      <br/>
      <h3>Maximum temperature</h3>
      <%= @displayString3%>
    </div>
  </div>
  
  <br/>
  
  <div class="row jumbotron">
    <div class="text-center">
      <h3>The Weather Forecast For Next Two Weeks (Average Temperature Only):</h3>
      <%= @city %>
      <br/>
      
      <div class="row">
      <% @displayForecastArray.each_with_index do |w, index|%>
      <div class="col-md-3">
        <h3>Day: <%=Date.today+(index+1).days%></h3>
         <%= w.to_s+'Â°C' %>
