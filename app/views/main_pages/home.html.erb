
  <!-- Services Section -->  
    <section id="country_and_duration">
      <div class="container">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Travel Packing List Generator</h2>
            <h3 class="section-subheading text-muted">Enter your details below.</h3>
        </div>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
      <%=form_tag({controller: "main_pages", action: "list_results"}, method: "post") do%>
      
      <%= label_tag :city %>
      <%= text_field_tag :city, nil, class: "form-control", placeholder: "Insert automated, dropdownlist of cities" %>

      <%= label_tag :duration %>
      <br/>
      <%= select_date Date.today, prefix: :start_date %>
      <br/>
      <%= select_date Date.today, prefix: :end_date %>
      <br/>
      <br/>
      <%= submit_tag "Submit", class: "btn btn-primary" %>
      
      <% end %>
          </div>
        </div>
      </div>
    </section>



    <!-- Portfolio Grid Section -->
  
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
