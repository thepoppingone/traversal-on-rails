    <section id="country_and_duration">
      <div class="container">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Travel Packing List Generator</h2>
            <h3 class="section-subheading text-muted">Enter your details below.</h3>
        </div>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session) do |f| %>
      
      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control', placeholder: "Insert automated, dropdownlist of cities" %>

      <%= f.label :duration %>
      <%= f.text_field :duration, class: 'form-control', placeholder: 'Insert a Calendar tag here' %>
      <br/>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      
      <% end %>
          </div>
        </div>
      </div>
    </section>



