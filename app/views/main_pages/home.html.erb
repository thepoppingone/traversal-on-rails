<div id="mainBody">
  <!-- Services Section -->  
    <section id="country_and_duration">
      <div class="container">
        <div class="col s12 m8 l12 center-align">
            <h2 class="white-text">Travel Packing List Generator</h2>
            <h3 class="white-text">Enter your destination below.</h3>
        </div>
        <div class="row">
          <div class="col s12 m6 l6 offset-m3 offset-l3 center-align">
      <%=form_tag({controller: "main_pages", action: "list_results"}, method: "post") do%>
      
      <%= label_tag :city, nil, class: "white-text" %>
      <%= text_field_tag :city, nil, class: "white-text", placeholder: "Please enter only the City name!" %>

      <% label_tag :duration %>
      <br/>
      <%= select_date Date.today, prefix: :start_date, class: "hide"%>
      <br/>
      <%= select_date Date.today, prefix: :end_date, class: "hide" %>
      <br/>
      <br/>
      <%= submit_tag "Submit", class: "btn btn-primary" %>
      
      <% end %>
          </div>
        </div>
      </div>
    </section>
</div>

